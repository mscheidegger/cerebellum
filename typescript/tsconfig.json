{
    "compilerOptions": {
      "module": "ES2015",
      "target": "ES2015",
      "strict": true,
      "esModuleInterop": true,
      "noImplicitAny": true,
      "removeComments": true,
      "preserveConstEnums": true,
      "sourceMap": true,
      "outDir": "dist",
      "moduleResolution": "Node",
      "allowSyntheticDefaultImports": true,
      "declaration": true,
      "baseUrl": ".", 
      "paths": {
        "cerebellum-ai": ["./src"]
      }
    },
    "include": ["src"],
    "exclude": ["node_modules"]
  }